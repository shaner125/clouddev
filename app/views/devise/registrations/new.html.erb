<div class="container" id="sign-up-form">
  <div class="row">
    <h1>Welcome to Medlife!</h1>
    <h3>Medlife's premier staff portal.</h3>

    <div class="col-sm-offset-4 col-sm-4">
      <h3>Sign up</h3>
          <%= bootstrap_form_for(resource, 
                                 :as => resource_name, 
                                 :url => registration_path(resource_name)) do |f| %>
                                 

            
            <%= f.collection_radio_buttons(
                                           :role, [['doctor', 'Doctor'], ['admin', 'Admin']],
                                           :first, :last, :checked => 'doctor', :collection_wrapper_tag => 'label',
                                           :collection_wrapper_class=>'bigSize') do |b|
                                             b.label(:class=>'my_class'){b.radio_button + "" +
                                             b.text.html_safe}
                                           end %>
          
            <%= f.text_field :name, 
          	           placeholder: 'username (will be shown publicly)', 
          	           class: 'form-control' %>
            <%= f.text_field :email, 
          	           placeholder: 'email', 
          	           class: 'form-control' %>
            <%= f.password_field :password, 
                                 placeholder: 'password', 
                                 class: 'form-control' %>
            <%= f.password_field :password_confirmation, 
                                 placeholder: 'password confirmation', 
                                 class: 'form-control' %>
            <%= f.submit 'Sign up', class: 'btn sign-up-button' %>
          <% end %>
    </div>
  </div>
</div>